<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/number"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="D3106"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/from_station"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="xiamen"
        android:layout_toEndOf="@id/number"/>
    <TextView
        android:id="@+id/spend_time"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="11:23"
        android:layout_toEndOf="@id/from_station"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/to_station"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="aojiang"
        android:layout_toEndOf="@id/spend_time"/>
    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:02"
        android:layout_alignStart="@id/from_station"
        android:layout_below="@id/from_station"/>
    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:02"
        android:layout_alignStart="@id/to_station"
        android:layout_below="@id/to_station"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20161002"
        android:layout_below="@id/start_time"
        android:layout_alignStart="@id/number"/>
    <TextView
        android:id="@+id/first_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一等：无"
        android:layout_alignTop="@id/date"
        android:layout_alignStart="@id/from_station"/>
    <TextView
        android:id="@+id/second_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二等：无"
        android:layout_alignTop="@id/date"
        android:layout_alignStart="@id/spend_time"/>
    <TextView
        android:id="@+id/no_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无座：无"
        android:layout_alignTop="@id/date"
        android:layout_alignStart="@id/to_station"/>
</RelativeLayout>
