<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wuyz.query12306.MainActivity">
    <TextView
        android:id="@+id/start_station_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="出发站"/>
    <Spinner
        android:id="@+id/start_station_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/start_station_text"
        android:layout_below="@id/start_station_text"/>
    <TextView
        android:id="@+id/end_station_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="到达站"
        android:layout_toEndOf="@id/start_station_text"
        android:layout_marginStart="40dp"/>
    <Spinner
        android:id="@+id/end_station_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/end_station_text"
        android:layout_below="@id/end_station_text"/>
    <TextView
        android:id="@+id/start_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="出发时间范围"
        android:layout_below="@id/start_station_spinner"
        android:layout_marginTop="16dp"/>
    <DatePicker
        android:id="@+id/start_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/start_time_text"
        android:layout_below="@id/start_time_text"/>
    <DatePicker
        android:id="@+id/end_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/start_time_view"
        android:layout_below="@id/start_time_text"/>
    <CheckBox
        android:id="@+id/first_seat_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一等座"
        android:layout_below="@id/end_time_view"/>
    <CheckBox
        android:id="@+id/second_seat_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二等座"
        android:layout_below="@id/end_time_view"
        android:layout_toEndOf="@id/first_seat_check"
        android:checked="true"/>
    <CheckBox
        android:id="@+id/no_seat_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无座"
        android:layout_below="@id/end_time_view"
        android:layout_toEndOf="@id/second_seat_check"/>
    <TextView
        android:id="@+id/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="定时间隔(秒)"
        android:layout_toEndOf="@id/end_station_spinner"
        android:layout_marginStart="40dp"/>
    <Spinner
        android:id="@+id/timer_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer_text"
        android:layout_alignStart="@id/timer_text"/>
    <Button
        android:id="@+id/timer_query_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="定时查询"
        android:layout_alignStart="@id/timer_spinner"
        android:layout_below="@id/timer_spinner"/>
    <Button
        android:id="@+id/query_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询"
        android:layout_alignStart="@id/timer_query_button"
        android:layout_below="@id/timer_query_button"/>
    <ListView
        android:id="@+id/list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_seat_check"
        android:padding="2dp"
        android:layout_marginTop="8dp"
        android:dividerHeight="2dp"/>
</RelativeLayout>
